<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/widget_list_item_padding"
    android:paddingStart="@dimen/widget_list_item_padding"
    android:paddingRight="@dimen/widget_list_item_padding"
    android:paddingEnd="@dimen/widget_list_item_padding">

    <TextView
        android:id="@+id/stock_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        tools:text="@string/default_symbol_text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end">

        <TextView
            android:id="@+id/bid_price"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/widget_list_item_bid_price_padding"
            android:paddingEnd="@dimen/widget_list_item_bid_price_padding"
            android:paddingLeft="@dimen/widget_list_item_bid_price_padding"
            android:paddingStart="@dimen/widget_list_item_bid_price_padding"
            tools:text="@string/price_text" />

        <TextView
            android:id="@+id/change"
            android:background="@drawable/percent_change_pill"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/widget_list_item_change_padding"
            android:paddingStart="@dimen/widget_list_item_change_padding"
            android:paddingRight="@dimen/widget_list_item_change_padding"
            android:paddingEnd="@dimen/widget_list_item_change_padding"
            tools:text="@string/change_text" />

    </LinearLayout>
</LinearLayout>