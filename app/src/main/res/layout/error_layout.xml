<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/no_internet_error_msg"
        android:paddingBottom="@dimen/error_image_padding_top"
        android:paddingLeft="@dimen/error_image_horizontal_padding"
        android:paddingRight="@dimen/error_image_horizontal_padding"
        android:paddingTop="@dimen/error_image_padding_top"
        android:src="@drawable/error"
        android:visibility="gone" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/no_internet_error_msg"
        android:paddingBottom="@dimen/error_image_padding_top"
        android:paddingLeft="@dimen/error_image_horizontal_padding"
        android:paddingRight="@dimen/error_image_horizontal_padding"
        android:paddingTop="@dimen/error_image_padding_top"
        android:text="@string/network_toast"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</LinearLayout>